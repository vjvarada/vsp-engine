# ============================================================
# VSP Engine — Environment Variables
# Copy to .env and fill in your values. Never commit .env !
# ============================================================

# --- Backend API ---
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=change-me-to-a-random-64-char-string

# --- Redis (Celery broker + result backend) ---
REDIS_URL=redis://localhost:6379/0

# --- File Storage ---
STORAGE_PATH=./data/studies
MAX_UPLOAD_SIZE_MB=2048

# --- AI Models ---
# TotalSegmentator weights location (auto-downloaded on first run)
TOTALSEG_HOME_DIR=./models/totalsegmentator
# MONAI Model Zoo bundles
MONAI_BUNDLE_DIR=./models/monai

# --- GPU ---
# Set to "cpu" if no GPU available; "cuda:0" for first GPU
GPU_DEVICE=cuda:0
# Reduce to "3mm" (fast mode) if VRAM < 8GB
TOTALSEG_RESOLUTION=1.5mm

# --- Frontend (Vite env vars - prefix with VITE_) ---
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# --- MinIO (optional, for production storage) ---
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET=vsp-studies

# --- CORS ---
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
